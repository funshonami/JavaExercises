
public class Car {
	private String carBrand;
	private String colour;
	private int mileage;
	
	public Car(String brand, String colour, int mileage) {
		carBrand = brand;
		this.colour = colour;
		this.mileage = mileage;
		
	}
	
		public void setCarBrand(String make) {
			carBrand = make;
		}
		
		public String getCarBrand() {
			return carBrand;
		}
		
		public void setColour(String colour) {
			this.colour = colour;
		}
		
		public String getColour() {
			return colour;
		}
		
		public void setMileage(int distance) {
			if (distance <= 120) {
				System.out.println("Driving within speed limit");
			}
			else {
				System.out.println("Driver is above speed limit");
			}
			mileage = distance;
		}
		
		public int getMileage() {
			return mileage;
		}
		
		public void drive(int distance) {
			mileage =  mileage + distance;	
		
		}
	

}
